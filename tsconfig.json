{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "jsx": "preserve",
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "typeRoots": ["./node_modules/@types", "./types"]
}
